{
    "name": "fcastill-kafka",
    "version": "0.10.0",
    "title": "Mock Publish Kafka message",
    "type": "flogo:activity",
    "description": "Publish a message to a kafka topic",
    "homepage": "https://github.com/fcastill/flogo-contrib-test/tree/master/activity/kafka",
    "display": {
      "icon": "activity-kafka.JPG"
    },
    "author": "Wendell Nichols <wnichols@tibco.com>",
    "settings":[
      {
        "name": "stringField",
        "type": "string",
        "required": true
      },
      {
        "name": "integerField",
        "type": "integer",
        "required": true
      },
      {
        "name": "longField",
        "type": "long",
        "required": true
      },
      {
        "name": "doubleField",
        "type": "double",
        "required": true
      },
      {
        "name": "connectionField",
        "type": "connection"
      },
      {
        "name": "booleanField",
        "type": "boolean"
      },
      {
        "name": "objectField",
        "type": "object"
      },
      {
        "name": "arrayField",
        "type": "array"
      },
      {
        "name": "anyField",
        "type": "any"
      },
      {
        "name": "paramsField",
        "type": "params"
      },
      {
        "name": "bytesField",
        "type": "bytes"
      },
      {
        "name": "datetimeField",
        "type": "datetime"
      },
    ],
    "input":[
      {
        "name": "message",
        "type": "string",
        "required": true,
        "description": "The message to send"
      }
    ],
    "output": [
      {
        "name": "partition",
        "type": "int",
        "description": "Documents the partition that the message was placed on"
      },
      {
        "name": "offset",
        "type": "long",
        "description": "Documents the offset for the message"
      }
    ]
  }
