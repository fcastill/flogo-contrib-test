{
  "name": "fcastill-counter",
  "type": "flogo:activity",
  "version": "0.10.0",
  "title": "Mock Counter Activity",
  "description": "Global Counter Activity",
  "homepage": "https://github.com/fcastill/flogo-contrib-test/tree/master/activity/counter",
  "display": {
    "icon": "counter-icon.svg"
  },
  "settings":[
    {
      "name": "counterName",
      "type": "string",
      "required": true,
      "description": "The name of the counter"
    },
    {
      "name": "op",
      "type": "string",
      "allowed" : ["get", "increment", "reset"],
      "description": "The counter operation, 'get' is the default operation"
    }
  ],
  "output": [
    {
      "name": "value",
      "type": "int",
      "description": "The result of the counter operation"
    }
  ]
}